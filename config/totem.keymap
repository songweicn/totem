            //                                     ┃    DEL    ┃    TAB    ┃    SPC    ┃   ┃   ENTER   ┃           ┃   BSPC    ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
        &kp Q           &kp W           &kp F               &kp P        &kp B        &kp J        &kp L            &kp U                &kp Y            &kp SINGLE_QUOTE
        &mt LEFT_WIN A  &mt LEFT_ALT R  &mt LEFT_CONTROL S  &mt LSHFT T  &kp G        &kp M        &mt RSHFT N      &mt RIGHT_CONTROL E  &mt RIGHT_ALT I  &mt RIGHT_GUI O
&tog 0  &kp Z           &kp X           &kp C               &kp D        &kp V        &kp K        &kp H            &kp COMMA            &kp DOT          &kp SLASH         &tog 0
                                        &lt 3 ESCAPE        &lt 1 SPACE  &lt 2 TAB    &lt 2 ENTER  &lt 1 BACKSPACE  &lt 3 DELETE
            >;
        };

        sym {
            label = "sym";
            bindings = <
        &kp EXCLAMATION  &kp AT_SIGN   &kp HASH        &kp DOLLAR        &kp PERCENT    &kp CARET       &kp AMPERSAND          &kp ASTERISK  &kp SINGLE_QUOTE  &kp DOUBLE_QUOTES
        &kp LEFT_WIN     &kp LEFT_ALT  &kp LCTRL       &kp LEFT_SHIFT    &kp CAPS       &kp LEFT_BRACE  &kp DOLLAR             &kp PERCENT   &kp CARET         &kp RIGHT_BRACE
&trans  &none            &none         &none           &none             &none          &kp TILDE       &kp EXCLAMATION        &kp AT_SIGN   &kp HASH          &kp PIPE           &trans
                                       &kp C_PREVIOUS  &kp C_PLAY_PAUSE  &kp C_NEXT     &trans          &kp RIGHT_PARENTHESIS  &trans
            >;
        };

        num {
            // ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓

